<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cuong.learnenglish">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.example.cuong.hocquavideo.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainScreen"
            android:screenOrientation="portrait" />
        <activity
            android:screenOrientation="landscape"
            android:name="com.example.cuong.hocquavideo.Youtube_Activity"/>
        <activity
            android:screenOrientation="portrait"
            android:name="com.example.cuong.hocquavideo.Videos"/>
        <activity
            android:screenOrientation="portrait"
            android:name="com.example.cuong.hocquavideo.Main_Video_Activity"/>

    </application>

</manifest>